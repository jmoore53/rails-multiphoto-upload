<div class="container">
<div class="col-sm-6 mt-4">
<h2 class="mb-4">Manage Event</h2>
<%= form_for(@widget, url: widget_path(@widget)) do |f| %>
    <div class="form-group row">
    <label class="col-4 col-form-label">Event Name</label>
    <div class="col-8">
    <%= f.text_field :widget_name, class:"form-control" %>
    </div>
    </div>
    <div class="form-group row">
    <label class="col-4 col-form-label">Event Date (Optional)</label>
    <div class="col-8">
    <%= f.date_select(:widget_date, include_blank:true, default:nil, class:"form-control") %>
    </div>
    </div>
    <%= link_to "Back", widget_path(@widget), class:"btn btn-danger" %>
    <%= f.submit "Edit Event", class:"btn btn-primary" %>
    </div>
<% end %>
</div>
</div>

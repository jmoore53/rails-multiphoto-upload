<div class="container">
<div class="mt-4 row">
<div class="col-sm-12 text-center">
<%= image_tag(@picture.url, class:"mb-2 ml-2 img-thumbnail", style:"height:auto; width:25rem;") %>
</div>
</div>
<div class="row">
<div class="col-sm-12 text-center">
<%= link_to @widget.title ||= "Back", widget_path(@widget), class:"btn btn-primary mb-1 mt-1" %>
<%= link_to "Delete Image", widget_widget_image_path(@widget, params[:id]), :method => :delete, data: { confirm: "Are you sure you want to delete this image?" }, class:"btn btn-primary" %> 
</div>
</div>
</div>
